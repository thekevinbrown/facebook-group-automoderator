{
	"name": "facebook-group-automoderator",
	"version": "1.0.0",
	"description": "Facebook group automation using Playwright",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "tsx src/local.ts",
		"format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
		"test": "playwright test"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "3.750.0",
		"@playwright/test": "1.50.1",
		"parse-duration": "2.1.3"
	},
	"devDependencies": {
		"@types/node": "22.13.5",
		"dotenv": "16.4.7",
		"prettier": "3.5.2",
		"tsx": "4.19.3",
		"typescript": "5.7.3"
	}
}
