{
	"name": "facebook-group-automoderator",
	"version": "1.0.0",
	"description": "Facebook group automation using Playwright",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "tsx src/local.ts",
		"deploy": "cdk deploy --all --require-approval never",
		"format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
		"test": "playwright test"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "3.750.0",
		"aws-cdk-lib": "2.180.0",
		"constructs": "10.4.2",
		"parse-duration": "2.1.3",
		"playwright-aws-lambda": "0.11.0",
		"playwright-core": "1.50.1"
	},
	"devDependencies": {
		"@types/node": "22.13.5",
		"aws-cdk": "2.1000.2",
		"dotenv": "16.4.7",
		"esbuild": "0.25.0",
		"prettier": "3.5.2",
		"tsx": "4.19.3",
		"typescript": "5.7.3"
	}
}
